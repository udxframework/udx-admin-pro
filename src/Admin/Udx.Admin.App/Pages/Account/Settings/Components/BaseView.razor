@namespace Udx.Admin.App.Pages.Account.Settings
@inherits  UdxComponentBase
<Form 
    Layout="vertical"
    OnFinish="OnFinish"
      OnFinishFailed="OnFinishFailed"
      Size="@AntSizeLDSType.Default"
       LabelColSpan="4"
    Model="@_currentUser">
   <Row Gutter="20">
           
          
              <GridCol Span="10">
        
    <FormItem Label="账号"  >
                @context.UserName
            </FormItem>
           <FormItem Label="姓名" >
                <Input @bind-Value="@context.Name"  Style="max-width: 220px;" DebounceMilliseconds=1000/>
            </FormItem> 
            <FormItem Label="昵称" >
                <Input @bind-Value="@context.NickName" Style="max-width: 220px;" DebounceMilliseconds=1000/>
            </FormItem> 
    <FormItem Label="Email">
        <AntDesign.Input @bind-Value="@context.Email" DebounceMilliseconds=1000 Style="max-width: 220px;"/>
    </FormItem>

   <FormItem Label="手机号">
        <Input @bind-Value="@context.Phone"  MaxLength="20" Style="max-width: 220px;" DebounceMilliseconds=1000/>
    </FormItem>
    <FormItem Label="国家地区">
        <Select
            TItem="string"
            TItemValue="string"
            Style="max-width: 220px;"
            @bind-Value="@context.Country">
            <SelectOptions>
                <SelectOption TItem="string" TItemValue="string" Value="@("China")" Label="中国"/>
            </SelectOptions>
        </Select>
    </FormItem>
    <FormItem Label="省市区">
        <GeographicView   @bind-Value="@context.RegionCode"/>
    </FormItem>
    <FormItem Label="地址">
        <AntDesign.Input @bind-Value="@context.Address" DebounceMilliseconds=1000/>
    </FormItem>
   
   
    </GridCol>

       <GridCol Span="12">
            <FormItem Label="头像"  Help="点击选择上传封面图片，建议宽高比例128*128px，大小500K以内">
        <UdxUploadImg @bind-Value="@context.Avatar" MaxSize="500" Style="width:128px;height:128px;" />

    </FormItem>

      <FormItem Label="个人签名">
        <AntDesign.TextArea @bind-Value="@context.Signature" DebounceMilliseconds=1000/>
    </FormItem>
      </GridCol>
       <GridCol Span="24">
           @context.MessageInfo
           </GridCol>
       <GridCol Span="12">

       <FormItem>
        <Button HtmlType="submit" Type="primary">
            确定更新
        </Button>
    </FormItem>
      </GridCol>
       <GridCol Span="12">
           </GridCol>
    </Row>
</Form>
   